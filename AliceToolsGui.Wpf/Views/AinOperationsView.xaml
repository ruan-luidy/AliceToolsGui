<UserControl
  x:Class="AliceToolsGui.Wpf.Views.AinOperationsView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:vm="clr-namespace:AliceToolsGui.Wpf.ViewModels"
  mc:Ignorable="d"
  d:DataContext="{d:DesignInstance Type=vm:AinOperationsViewModel, IsDesignTimeCreatable=False}">

  <StackPanel Margin="20">
    <TextBlock
      Margin="0,0,0,20"
      FontSize="20"
      FontWeight="Bold"
      Text="Operações de Arquivo AIN" />

    <!--  Dump AIN  -->
    <hc:Card
      Margin="0,0,0,15"
      Padding="15"
      BorderThickness="1">
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          FontSize="16"
          FontWeight="SemiBold"
          Text="Fazer Dump do Arquivo AIN" />

        <hc:UniformSpacingPanel Margin="0,0,0,10" Spacing="10">
          <TextBlock
            Width="100"
            VerticalAlignment="Center"
            Text="Arquivo AIN:" />
          <TextBox
            Width="300"
            hc:InfoElement.Placeholder="Selecione o arquivo AIN..."
            Text="{Binding AinFilePath, UpdateSourceTrigger=PropertyChanged}" />
          <Button
            Padding="15,8"
            Command="{Binding BrowseAinFileCommand}"
            Content="Procurar" />
        </hc:UniformSpacingPanel>

        <hc:UniformSpacingPanel Margin="0,0,0,10" Spacing="10">
          <TextBlock
            Width="100"
            VerticalAlignment="Center"
            Text="Pasta de Saída:" />
          <TextBox
            Width="300"
            hc:InfoElement.Placeholder="Selecione a pasta de saída..."
            Text="{Binding DumpOutputPath, UpdateSourceTrigger=PropertyChanged}" />
          <Button
            Padding="15,8"
            Command="{Binding BrowseDumpOutputCommand}"
            Content="Procurar" />
        </hc:UniformSpacingPanel>

        <Button
          Margin="0,10,0,0"
          Padding="20,10"
          HorizontalAlignment="Left"
          Command="{Binding DumpAinCommand}"
          Content="Dump"
          Style="{StaticResource ButtonPrimary}" />
      </StackPanel>
    </hc:Card>

    <!--  Edit AIN  -->
    <hc:Card
      Margin="0,0,0,15"
      Padding="15"
      BorderThickness="1">
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          FontSize="16"
          FontWeight="SemiBold"
          Text="Editar Arquivo AIN" />

        <hc:UniformSpacingPanel Margin="0,0,0,10" Spacing="10">
          <TextBlock
            Width="100"
            VerticalAlignment="Center"
            Text="Arquivo AIN:" />
          <TextBox
            Width="300"
            hc:InfoElement.Placeholder="Selecione o arquivo AIN..."
            Text="{Binding AinFilePath, UpdateSourceTrigger=PropertyChanged}" />
          <Button
            Padding="15,8"
            Command="{Binding BrowseAinFileCommand}"
            Content="Procurar" />
        </hc:UniformSpacingPanel>

        <Button
          Margin="0,10,0,0"
          Padding="20,10"
          HorizontalAlignment="Left"
          Command="{Binding EditAinCommand}"
          Content="Editar"
          Style="{StaticResource ButtonSuccess}" />
      </StackPanel>
    </hc:Card>

    <!--  Compare AIN  -->
    <hc:Card
      Margin="0,0,0,15"
      Padding="15"
      BorderThickness="1">
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          FontSize="16"
          FontWeight="SemiBold"
          Text="Comparar Arquivos AIN" />

        <hc:UniformSpacingPanel Margin="0,0,0,10" Spacing="10">
          <TextBlock
            Width="100"
            VerticalAlignment="Center"
            Text="Arquivo 1:" />
          <TextBox
            Width="300"
            hc:InfoElement.Placeholder="Selecione o primeiro arquivo..."
            Text="{Binding CompareFilePath, UpdateSourceTrigger=PropertyChanged}" />
          <Button
            Padding="15,8"
            Command="{Binding BrowseAinFileCommand}"
            Content="Procurar" />
        </hc:UniformSpacingPanel>

        <hc:UniformSpacingPanel Margin="0,0,0,10" Spacing="10">
          <TextBlock
            Width="100"
            VerticalAlignment="Center"
            Text="Arquivo 2:" />
          <TextBox
            Width="300"
            hc:InfoElement.Placeholder="Selecione o segundo arquivo..."
            Text="{Binding CompareWithFilePath, UpdateSourceTrigger=PropertyChanged}" />
          <Button
            Padding="15,8"
            Command="{Binding BrowseAinFileCommand}"
            Content="Procurar" />
        </hc:UniformSpacingPanel>

        <Button
          Margin="0,10,0,0"
          Padding="20,10"
          HorizontalAlignment="Left"
          Command="{Binding CompareAinCommand}"
          Content="Comparar"
          Style="{StaticResource ButtonWarning}" />
      </StackPanel>
    </hc:Card>

    <!--  Result  -->
    <hc:Card
      Padding="15"
      BorderThickness="1"
      Visibility="{Binding DumpResult, Converter={StaticResource String2VisibilityConverter}}">
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          FontSize="16"
          FontWeight="SemiBold"
          Text="Resultado" />

        <TextBox
          Height="200"
          AcceptsReturn="True"
          IsReadOnly="True"
          Text="{Binding DumpResult, Mode=OneWay}"
          TextWrapping="Wrap"
          VerticalScrollBarVisibility="Auto" />
      </StackPanel>
    </hc:Card>

    <!--  Status  -->
    <TextBlock
      Margin="0,15,0,0"
      FontWeight="SemiBold"
      Foreground="{DynamicResource PrimaryBrush}"
      Text="{Binding StatusMessage}" />
  </StackPanel>
</UserControl>
